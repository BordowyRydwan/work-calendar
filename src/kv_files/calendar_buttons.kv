#:kivy 2.0.0
#:import rgba src.helpers.color.rgba

<HiddenButton>:
    background_color: rgba(108, 103, 130, 1)


<NormalButton>:
    background_color: rgba(128, 255, 0, 1)
    font_size: 20
    bold: True
    padding: (10, 5)
    text_size: self.size
    halign: 'right'
    valign: 'bottom'

<TodayButton>:
    background_color: rgba(255, 255, 0, 1)
    font_size: 20
    bold: True
    padding: (10, 5)
    text_size: self.size
    halign: 'right'
    valign: 'bottom'

<WorkButton>:
    background_color: rgba(255, 0, 0, 1)
    font_size: 20
    bold: True
    padding: (10, 5)
    text_size: self.size
    halign: 'right'
    valign: 'bottom'